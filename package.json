{
  "name": "backgrond_run_and_test",
  "description": "GitHub Action, That lets you run a background task, wait until it's becomes available, and then run your tests",
  "version": "1.0.0",
  "author": "MohamedRaslan",
  "private": true,
  "homepage": "https://github.com/MohamedRaslan/backgrond_run_and_test",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MohamedRaslan/backgrond_run_and_test.git"
  },
  "bugs": {
    "url": "https://github.com/MohamedRaslan/backgrond_run_and_test/issues"
  },
  "keywords": [
    "actions",
    "node",
    "background",
    "github"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "yarn format:write && yarn package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "yarn package -- --watch",
    "test": "npx jest",
    "fake-servers": "concurrently \"serve -s __tests__/build/app1 -p 4001 --debug\" \"serve -s __tests__/build/app2 -p 4002 --debug\" \"serve -s __tests__/build/app3 -p 4003 --debug\"",
    "all": "yarn format:write && yarn lint && yarn test && yarn coverage && yarn package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "reporters": [
      [
        "github-actions",
        {
          "silent": false
        }
      ],
      "summary"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vercel/ncc": "^0.38.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.1",
    "prettier-eslint": "^16.3.0",
    "semantic-release": "^24.0.0",
    "serve": "^14.2.3",
    "ts-jest": "^29.2.1",
    "typescript": "^5.4.5"
  }
}
