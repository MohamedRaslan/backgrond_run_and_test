{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "resolveJsonModule": true
  },
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
